<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>

        <item name="android:windowEnterAnimation">@anim/enter_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/exit_fade_out</item>

    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="backgroundTint">@color/bottom_sheet_background_color</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/bottom_sheet_dialog_top_corner_radius</item>
        <item name="cornerSizeTopLeft">@dimen/bottom_sheet_dialog_top_corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/bottom_sheet_dialog_bottom_corner_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/bottom_sheet_dialog_bottom_corner_radius</item>
    </style>

    <style name="BottomSheetItemTextNormal" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/bottom_sheet_item_text_size</item>
        <item name="android:textColor">@color/bottom_sheet_item_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetItemTextSelected" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/bottom_sheet_item_selected_text_size</item>
        <item name="android:textColor">@color/bottom_sheet_item_selected_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Card View Style -->
    <style name="Common.CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">@dimen/common_card_view_margin</item>
        <item name="contentPadding">@dimen/common_card_view_content_padding</item>

        <item name="cardBackgroundColor">@color/common_card_view_background_color</item>
        <item name="cardElevation">@dimen/common_card_view_elevation</item>
        <item name="cardCornerRadius">@dimen/common_card_view_card_corner_radius</item>
        <item name="strokeColor">@color/common_card_view_stroke_color</item>
        <item name="strokeWidth">@dimen/common_card_view_card_stroke_width</item>
        <item name="rippleColor">@color/primaryColor</item>
    </style>

    <style name="Common.NormalButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint" tools:ignore="NewApi">#fff</item>
        <item name="android:paddingLeft">@dimen/common_normal_button_left_right_padding</item>
        <item name="android:paddingRight">@dimen/common_normal_button_left_right_padding</item>
        <item name="android:paddingTop">@dimen/common_normal_button_top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/common_normal_button_top_bottom_padding</item>

        <item name="android:layout_marginStart" tools:ignore="NewApi">
            @dimen/common_normal_button_margin
        </item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">
            @dimen/common_normal_button_margin
        </item>
        <item name="android:layout_marginTop">@dimen/common_normal_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/common_normal_button_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/common_button_min_height</item>
        <item name="android:textColor">@color/common_normal_button_text_color</item>
    </style>

    <style name="Common.OutlinedMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <item name="android:padding">@dimen/common_outlined_button_padding</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">
            @dimen/common_outlined_button_margin
        </item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">
            @dimen/common_outlined_button_margin
        </item>
        <item name="android:layout_marginTop">@dimen/common_outlined_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/common_outlined_button_margin</item>
        <item name="textAllCaps">false</item>

        <item name="android:textColor">@color/common_outlined_button_color</item>
        <item name="rippleColor">@color/common_outlined_button_color</item>
        <item name="strokeColor">@color/common_outlined_button_color</item>
        <item name="strokeWidth">@dimen/common_outlined_stroke_width</item>
        <item name="android:minHeight">@dimen/common_button_min_height</item>

    </style>

    <style name="Common.TextButton" parent="Widget.MaterialComponents.Button.TextButton">

        <item name="android:padding">@dimen/common_text_button_padding</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">
            @dimen/common_text_button_margin
        </item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">
            @dimen/common_text_button_margin
        </item>
        <item name="android:layout_marginTop">@dimen/common_text_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/common_text_button_margin</item>
        <item name="textAllCaps">false</item>

        <item name="android:textColor">@color/common_outlined_button_color</item>
        <item name="rippleColor">@color/common_outlined_button_color</item>
        <item name="android:minHeight">@dimen/common_button_min_height</item>

    </style>

    <style name="Common.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/common_text_input_layout_border_color</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/common_text_input_layout_border_color</item>
        <item name="boxStrokeColor">@color/common_text_input_layout_border_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="endIconMode">custom</item>
        <item name="startIconTint">@color/common_text_input_layout_border_color</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="Common.TextInputLayoutDense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/common_text_input_layout_border_color</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/common_text_input_layout_border_color</item>
        <item name="boxStrokeColor">@color/common_text_input_layout_border_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="endIconMode">custom</item>
        <item name="startIconTint">@color/common_text_input_layout_border_color</item>
        <item name="errorIconDrawable">@null</item>
    </style>


    <style name="Common.TextInputLayoutEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/common_text_input_layout_border_color</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/common_text_input_layout_border_color</item>
        <item name="boxStrokeColor">@color/common_text_input_layout_border_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="endIconMode">none</item>
        <item name="errorIconDrawable">@null</item>
        <item name="android:textColor">@color/cursor_color</item>
        <item name="android:textCursorDrawable">@xml/cursor_color</item>
    </style>

    <style name="Common.TextInputLayoutEditTextDense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/common_text_input_layout_border_color</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="errorEnabled">false</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/common_text_input_layout_border_color</item>
        <item name="boxStrokeColor">@color/common_text_input_layout_border_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="endIconMode">none</item>
        <item name="errorIconDrawable">@null</item>
        <item name="android:textColor">@color/cursor_color</item>
        <item name="android:textCursorDrawable">@xml/cursor_color</item>
    </style>


