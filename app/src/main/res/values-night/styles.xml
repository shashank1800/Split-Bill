    <style name="TextStyleHeadMediumBold">
        <item name="android:textColor">@color/text_style_head_medium_bold_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/text_style_padding</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleContentMediumBold">
        <item name="android:textColor">@color/text_style_content_medium_bold_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/text_style_padding</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleContentMedium">
        <item name="android:textColor">@color/text_style_content_medium_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/text_style_padding</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="DialogTheme" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
    </style>

    <style name="Widget.Theme.SplitBill.AppBar" parent="">
<!--        <item name="android:background">@color/gray_600</item>-->
<!--        <item name="exampleColor">@color/light_blue_600</item>-->
    </style>

    <style name="MaterialSnackbarTheme" parent="@style/Widget.MaterialComponents.Snackbar.FullWidth">
        <item name="cornerRadius">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

